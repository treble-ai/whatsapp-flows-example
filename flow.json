{
  "version": "7.0",
  "data_api_version": "3.0",
  "routing_model": {
    "USER_INFO": []
  },
  "screens": [
    {
      "id": "USER_INFO",
      "title": "Conoce m√°s de Treble",
      "terminal": true,
      "data": {
        "name": {
          "type": "string",
          "__example__": "Ana"
        },
        "email": {
          "type": "string",
          "__example__": "ana@treble.ai"
        },
        "features": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "enabled": {
                "type": "boolean"
              }
            }
          },
          "__example__": [
            { "id": "ai-node", "title": "ü§ñ AI Node", "enabled": true },
            { "id": "meta-ads", "title": "üìß Meta Ads", "enabled": false }
          ]
        }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "D√©janos tu informaci√≥n"
          },
          {
            "type": "Form",
            "name": "text_input_form",
            "init-values": "${data.init_values}",
            "children": [
              {
                "type": "TextInput",
                "required": true,
                "label": "Nombre y apellido",
                "name": "name"
              },
              {
                "type": "TextInput",
                "required": true,
                "input-type": "email",
                "label": "Correo electr√≥nico",
                "name": "email"
              },
              {
                "type": "ChipsSelector",
                "name": "features",
                "label": "Features",
                "description": "Selecciona sobre cu√°les features quisieras recibir m√°s informaci√≥n",
                "data-source": "${data.features}"
              },
              {
                "type": "Footer",
                "label": "Continuar",
                "on-click-action": {
                  "name": "data_exchange",
                  "payload": {
                    "name": "${form.name}",
                    "email": "${form.email}",
                    "features": "${form.features}"
                  }
                }
              }
            ]
          }
        ]
      }
    }
  ]
}
